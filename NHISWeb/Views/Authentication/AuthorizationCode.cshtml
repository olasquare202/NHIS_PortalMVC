@model NHISWeb.Models.AuthorizationCode.CreateAuthorizationCode

@{
    ViewData["Title"] = "AuthorizationCode";
}

<h1>AuthorizationCode</h1>

<h4>CreateAuthorizationCode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AuthorizationCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EnroleeName" class="control-label"></label>
                <input asp-for="EnroleeName" class="form-control" />
                <span asp-validation-for="EnroleeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnroleeNumber" class="control-label"></label>
                <input asp-for="EnroleeNumber" class="form-control" />
                <span asp-validation-for="EnroleeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnroleePhoneNumber" class="control-label"></label>
                <input asp-for="EnroleePhoneNumber" class="form-control" />
                <span asp-validation-for="EnroleePhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider" class="control-label"></label>
                <input asp-for="Provider" class="form-control" />
                <span asp-validation-for="Provider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate Code" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller = "Home" asp-action="Index">Back to Portal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
